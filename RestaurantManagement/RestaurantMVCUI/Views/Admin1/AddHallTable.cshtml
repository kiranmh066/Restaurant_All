@model RestaurantEntity.HallTable
@*//this name should be the name of projects under dependencies after adding referrences in MvcUi*@
@{
    Layout = "~/Views/Shared/_LayoutAdmin1.cshtml";

}
<body style="background-color:#5A3B5D;color:white;padding-bottom:100px">
    <div class="container">
        <div>
            <center> <a asp-controller="Admin1" asp-action="Index"><h2>Index</h2></a></center>
            <hr />
        </div>


        <form method="post" enctype="multipart/form-data">
            <h2>Add HallTable </h2>
            <div class="form-group">
                @*  form group for automatic audjustment for various screen sizes*@
                <label>Table Size</label>
                <input type="text" asp-for="HallTableSize" class="form-control" placeholder="Enter Table Size" required />
            </div>
            
            <input type="submit" value="Save" class="btn btn-outline-success" /> 
            &nbsp;&nbsp;
            <input type="reset" value="Reset" class="btn btn-outline-secondary" />
            <hr />
            @*submit sends form to server thats why we use submit not button type  *@
            @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in Foodcontroller *@
            @if (ViewBag.status == "Ok")
            {
                <div class="alert alert-success">
                    @ViewBag.message
                </div>
            }
            else if (ViewBag.status == "Error")
            {
                <div class="alert alert-danger">
                    @ViewBag.message
                </div>
            }
        </form>
    </div>
</body>