                *@
                                {
                                    @* string imageBase64Data = Convert.ToBase64String(Employee.ImgPoster);
                    string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);*@
                                    <tr style="color:white">
                                        <td>@Employee.EmpId</td>
                                        <td>@Employee.EmpName</td>
                                        <td>@Employee.EmpEmail</td>
                                        <td>@Employee.EmpPassword</td>
                                        <td>@Employee.EmpDesignation</td>
                                        <td>@Employee.EmpSpeciality</td>
                                        <td>@Employee.EmpPhone</td>
                                        <td>@Employee.EmpGender</td>
                                        @*  <td><img height="50" width="50" src="@imageDataURL" /></td>*@

                                        <td>
                                            <a asp-controller="Admin1" asp-action="EditEmployee"
                                   asp-route-EmployeeId="@Employee.EmpId"><img class="img-fluid" style="height:40px" src="https://www.svgrepo.com/show/241804/edit.svg" /></a>
                                        </td>

                                        <td>
                                            <a asp-controller="Admin1" asp-action="DeleteEmployee" onclick="deleteFunction()"
                                   asp-route-EmployeeId="@Employee.EmpId"><img class="img-fluid" style="height:50px"  src="https://www.svgrepo.com/show/243864/delete.svg" /></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        
    }
    else
    {
            <h1 class="text-center text-uppercase">  there is no employee </h1>
    }
 }
