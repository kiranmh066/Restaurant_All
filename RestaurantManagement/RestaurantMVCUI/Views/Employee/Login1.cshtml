@model RestaurantEntity.Employee



<html>
<head>
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 1000);
        window.onunload = function () { null };
    </script>
</head>

<body class="img-responsive" style="background-image:url('https://png.pngtree.com/back_origin_pic/03/91/31/216a8c258305188af56217c3b58b99c5.jpg');">
 
    <div class="container-fluid  " style="padding-left:120px;padding-top:80px">
        <div class="row">
            <div class="col-md-3">
                <img class="img align-content-md-start" style="height:350px;width:350px;" src="https://www.svgrepo.com/show/218334/chef.svg" alt=" ">
            </div>
            
                <div class="col-md-3 justify-content-center align-items-center ">
                    @*<div class="col-12 col-md-8 col-lg-6 col-xl-5">*@
                
                        <div >
                            <div class="card-body p-4 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">
                            
                                    <h2 class="font-weight-bolder mb-2 text-uppercase">Login</h2>
                                    <p class="mb-5">Please enter your login and password!</p>

                                    <form method="post" enctype="multipart/form-data">


                                        <div class="form-group">
                                            <label>Employee Email</label>
                                            <input type="text" asp-controller="Employee" asp-for="EmpEmail" class="form-control" placeholder="Enter Employee Email" required />
                                        </div>
                                        <div class="form-group">
                                            <label>Employee Password</label>
                                            <input type="text" asp-controller="Employee" asp-for="EmpPassword" class="form-control" placeholder="Enter Employee Password" required />
                                        </div>
                                        <input type="submit" value="Login" class="btn btn-success" /> @*submit display message for required option required works only with submit*@
                                        <br />
                                        <a asp-controller="Employee" asp-action="Forgot" type="button" >Forgot Password</a>
                                       
                                       
                                        @if (ViewBag.status == "Ok")
                                        {<br />
                                            <div class="alert alert-success">
                                                @ViewBag.message
                                            </div>
                                        }
                                        else if (ViewBag.status == "Error")
                                        {<br />
                                            <div class="alert alert-danger">
                                                @ViewBag.message
                                            </div>
                                        }
                                    </form>

                                 




                                </div>



                            </div>
                        </div>
                    </div>
                </div>
        <div class="col-md-6">
        </div>
       
    </div>

</body>
</html>