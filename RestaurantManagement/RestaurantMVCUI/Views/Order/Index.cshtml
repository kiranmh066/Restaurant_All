@model IEnumerable<RestaurantEntity.Food>

<body style="background-color:#5A3B5D">
    <a asp-area="" asp-controller="Order" asp-action="UserTableEntry" type="button" class="btn  text-dark"><img class="img-fluid" style="height:35px" src="https://www.svgrepo.com/show/230939/back.svg"></a>
    <div class="container">
        @using (Html.BeginForm())
        {
            <div style="color:#003399">



                <a class="text-uppercase d-inline-block text-center" style="font-size:xx-large" align="center">Patient <span class="font-weight-bold" style="font-size:xx-large">Details</span></a>



                <span style="font-size:large;float:right">
                    @Html.RadioButton("option", "FoodName") <text>Name</text> @Html.RadioButton("option", "Gender") <text> Gender </text>
                    @Html.RadioButton("option", "Subjects")<text>Address</text> @Html.TextBox("search")
                    <input type="submit" name="submit" value="Search" />
                </span>
            </div>
        }
        <h2 class="text-light text-center">Foods  <p class="text-right text-light"><a asp-controller="Order" asp-action="GetOrders1" class="btn btn-primary "><img src="https://www.svgrepo.com/show/49439/cart.svg" style="height:30px;width:30px;"/>&nbsp; View List</a></p></h2>
        <br/>
                <div class=" row">
                    
                      @foreach (var food in Model)
                    {
                        string imageBase64Data = Convert.ToBase64String(food.FoodImage);
                        string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);

                        <div class="col-md-3">

                            <div class="col-md-3">
                                <div class="card" style="width: 17rem;">
                                    <div class="bg-image hover-overlay ripple shadow-1-strong rounded"
                                     data-mdb-ripple-color="light">
                                        <img height="150" src="@imageDataURL" class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <h5 class="card-title">@food.FoodName</h5>
                                            <p class="card-text">Type(Veg/NonVeg):@food.FoodType </p>
                                            <p class="card-text">Food Cusine: @food.FoodCuisine</p>
                                            <p class="card-text">Cost:₹@food.FoodCost</p>
                
                                          <a asp-controller="Order" asp-action="AddOrder1"asp-route-FoodId="@food.FoodId" type="button" class="btn btn-success">Add to Cart</a>
         
                                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br/>
                   
                        </div>


                    }
                    
                </div>

</div>
</body>