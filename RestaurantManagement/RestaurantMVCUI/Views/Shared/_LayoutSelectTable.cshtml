<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] AR Restaurant</title>
    <link rel="shortcut icon" type="image/svg" href="~/restaurant-plate.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href=" ~/js/site.js" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3 " style="background-color:#D1B001">
            <div class="container">
                <img style="width:90px;height:90px" class="img-fluid" src="https://www.svgrepo.com/show/14858/restaurant.svg" alt=" ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link font-weight-bolder " style="color:#5A3B5D;font-size:x-large" href="/Home/#har1">Home </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bolder " style="color:#5A3B5D;font-size:x-large" asp-area="" asp-controller="Order" asp-action="SelectTable">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bolder " style="color:#5A3B5D;font-size:x-large" href="/Home/#har3">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bolder " style="color:#5A3B5D;font-size:x-large" href="/Home/#har2">About us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid " style="color:#5A3B5D">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted " style="background-color:#D1B001">
        <div class="container text-light">
            <img style="width:90px;height:90px" class="img-fluid" src="https://www.svgrepo.com/show/14858/restaurant.svg" alt=" ">
            &copy; 2022 - RestaurantMVCUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
