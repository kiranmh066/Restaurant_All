@{
    ViewData["Title"] = "AddOrder";
}



@model RestaurantEntity.Order
<script type="text/javascript">
    function fun() {


        alert("Food addded succefully");
    }
</script>
<body style="background-color:#5A3B5D">
    <a asp-area="" asp-controller="Order" asp-action="Index" type="button" class="btn  text-light"><img class="img-fluid" style="height:35px" src="https://www.svgrepo.com/show/163122/backward-arrow.svg"></a>


<div class="container" >
    
<form method="post" enctype="multipart/form-data">
    <h2 class="text-center" style="color:#1e88e5">Add Order </h2>
  
    <div class="form-group text-white">
        @*  form group for automatic audjustment for various screen sizes*@
        <label>Order Quantity</label>
        <input type="number" asp-for="Quantity" min="0" max="10" class="form-control" placeholder="Enter Order quantity" />
    </div>
            <div class="form-group text-white">
        <label>Order Time</label>
        <input type="datetime" asp-for="OrderDate" class="form-control" placeholder="Enter Order Time" required />
    </div>
            <div class="form-group text-white">
        <label>Food Id</label>
        <input type="text" asp-for="FoodId" class="form-control" placeholder="Enter Food ID" required disabled />
    </div>
            <div class="form-group text-white">
        <label>Hall Table Id</label>
        <select asp-for="HallTableId" asp-items="@ViewBag.TableId" class="form-control" placeholder="Select Hall Table ID" required></select>
  
    </div>
   


    @* <div class="form-group">
    <label>Order Poster</label>
    <input type="file" id="poster" name="poster" class="form-control" required />
    </div>
    *@

            <input type="submit" value="Save" onclick="fun();" class="btn btn-success" />
     @*submit display message for required option required works only with submit*@
    <input type="button" value="Reset" class="btn btn-outline-secondary" />

    <hr />
    @*submit sends form to server thats why we use submit not button type  *@
    @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in Ordercontroller *@
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

 </div>
 </body>